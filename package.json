{
  "name": "homestock",
  "version": "1.0.0",
  "description": "NSE Automation Desktop App with Electron + FastAPI",
  "main": "electron/main.js",
  "scripts": {
    "start": "concurrently \"npm run dev:react\" \"wait-on http://localhost:5173 && electron .\"",
    "dev": "concurrently \"npm run dev:react\" \"wait-on http://localhost:5173 && electron . --dev\"",
    "dev:react": "vite",
    "build:react": "vite build",
    "build:backend": "node scripts/build_backend.js",
    "build": "npm run build:react && npm run build:backend && electron-builder",
    "build:mac": "npm run build:react && npm run build:backend && electron-builder --mac",
    "build:win": "npm run build:react && npm run build:backend && electron-builder --win",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "nse",
    "stock",
    "automation"
  ],
  "author": "HomeStock",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.1"
  },
  "build": {
    "appId": "com.homestock.app",
    "productName": "HomeStock",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "backend/app/**/*",
      "backend/requirements.txt",
      "backend/start_server.py",
      "!backend/**/__pycache__/**/*",
      "!backend/**/*.pyc",
      "!backend/venv/**/*",
      "!backend/.venv/**/*",
      "!backend/build/**/*",
      "!backend/dist/**/*",
      "!backend/*.spec",
      "!backend/*.log"
    ],
    "extraResources": [
      "backend/dist/homestock-backend",
      "backend/dist/homestock-backend.exe"
    ],
    "mac": {
      "category": "public.app-category.finance",
      "target": [
        "dmg"
      ],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}

